$(function(){
    const currentUserId = <%= current_user.id%>;
    const userId = <%= @message.user.id %>;
    if(currentUserId !== userId){
        alert('この操作は禁じられています');  
        return;  
    }else{
      $('.main').append("<%= escape_javascript(render 'messages/destroy_confirm', message: @message) %>");
      $('.message-destroy-confirmation').fadeIn();
    }
});