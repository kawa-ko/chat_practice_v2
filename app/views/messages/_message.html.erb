<div class="message-container">
	<div class="message-content">
	    <div class="user-prof">
		  <% if message.user.image? %>
            <%= image_tag message.user.image.url %>
          <% else %>
            <%= image_tag  '1907765.jpg' %>
          <% end %>
		  <p class="message-user-name">
		    <%= message.user.name %>
		  </p>
		</div>
		<p class="content">
		    <%= message.content %>
		</p>
		<% if message.image? %>
		    <%= image_tag message.image.url, class: 'message-image' %>
		<% end %>
	</div>
</div>