<div class="form-wrapper">
  <h2 class="heading">ログイン</h2>
  <div class="form">
    <%= form_with url: login_path, scope: :session, local: true do |f| %>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email %>

    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %>

    <%= f.submit 'ログイン', class: 'submit-btn'%>
    <% end %>
  </div>
</div>
