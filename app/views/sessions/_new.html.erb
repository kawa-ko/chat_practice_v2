<div class="login-form">
    <div class="form-wrapper modal-inner">
      <h2 class="heading">ログイン</h2>
      <span class="fas fa-times close"></span>
      <div class="form">
        <%= form_with url: login_path, scope: :session, local: true, method: :post do |f| %>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email %>
    
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
    
        <%= f.check_box :remember_me , class: 'remember-check'%>
        <p class="remember-check-text">次回以降自動でログインする</p>
    
        <%= f.submit 'ログイン', class: 'submit-btn'%>
        <% end %>
      </div>
    </div>
</div>